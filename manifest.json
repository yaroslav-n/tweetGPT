{
    "name": "tweetGPT",
    "action": {
      "default_popup": "./src/popup/popup.html"
    },
    "manifest_version": 3,
    "version": "2.0.0",
    "description": "Writes tweets with chatGPT",
    "permissions": [
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "https://twitter.com/",
      "https://tweetgpt.web.app/"
    ],
    "externally_connectable": {
      "matches": ["https://twitter.com/*", "https://tweetgpt.web.app/*"]
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
      "service_worker": "lib/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["icons/button.svg", "icons/button_error.svg"],
            "matches": ["https://twitter.com/*"]
        }
    ]
  }